pipeline {
    agent any
    tools {
        maven 'maven-3.9'
    }
    stages {
        stage('Build jar') {
            steps {
                scripts {
                    echo 'Building the app...'
                    sh 'mvn package'
                }
            }
        }

        stage('build image') {
            steps {
                scripts {
                    echo 'Building the docker image...'
                     withCredentials([usernamePassword(credentialsId: 'docker-hub-crd', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh 'docker build -t yacinham10/my-app:1.2.2 . '
                        sh 'echo $PASSWORD | docker login -u $USERNAME --password-stdin '
                        sh 'docker push yacinham10/my-app:1.2.2 '
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
