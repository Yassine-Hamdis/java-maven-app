pipeline {
    agent any
    parameters {
        choice(name : 'version', choices: ['1.0.1', '1.1.1', '1.2.1'], description:'')
        booleanParam(name :'executeTest', defaulValue: true, description='')
    }
    stages {
        stage('Build') {
            steps {
                echo 'building the app...'
            }
        }
        stage('Test') {
            when {
                expression {
                    params.executeTest
                }
            }
            steps {
                echo 'testing the app...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                echo "version ${params.VERSION} "
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
